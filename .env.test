# Test Environment Configuration

# Server Configuration
NODE_ENV=test
PORT=3001

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/carbon-monitoring-test
MONGODB_TEST_URI=mongodb://localhost:27017/carbon-monitoring-test

# Authentication
JWT_SECRET=test_jwt_secret_key_should_be_secure
JWT_EXPIRATION=1d
API_KEY_SECRET=test_api_key_secret

# Logging
LOG_LEVEL=warn
LOG_FILE_PATH=./logs/app-test.log

# CORS
CORS_ORIGIN=*

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Simulator
ENABLE_SIMULATOR=false
SIMULATOR_INTERVAL=1000
SIMULATOR_BUILDINGS=2
SIMULATOR_DEVICES=5
