# Production Environment Configuration

# Server Configuration
NODE_ENV=production
PORT=3000

# MongoDB Connection
MONGODB_URI=mongodb://mongodb:27017/carbon-monitoring
# Production should use a real connection string with authentication
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/carbon-monitoring?retryWrites=true&w=majority

# Authentication
JWT_SECRET=production_jwt_secret_key_should_be_long_and_secure_use_strong_random_value
JWT_EXPIRATION=1d
API_KEY_SECRET=production_api_key_secret_should_be_long_and_secure

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app-prod.log

# CORS
# In production, specify allowed origins
CORS_ORIGIN=https://your-production-domain.com,https://admin.your-production-domain.com

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Simulator
# Disable simulator in production, it should only use real data
ENABLE_SIMULATOR=false
