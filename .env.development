# Development Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3000

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/carbon-monitoring-dev
MONGODB_TEST_URI=mongodb://localhost:27017/carbon-monitoring-test

# Authentication
JWT_SECRET=dev_jwt_secret_key_should_be_long_and_secure
JWT_EXPIRATION=1d
API_KEY_SECRET=dev_api_key_secret_should_be_different

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/app-dev.log

# CORS
CORS_ORIGIN=*

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Simulator
ENABLE_SIMULATOR=true
SIMULATOR_INTERVAL=5000
SIMULATOR_BUILDINGS=5
SIMULATOR_DEVICES=20
